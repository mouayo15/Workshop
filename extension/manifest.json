{
  "manifest_version": 3,
  "name": "SocialGuard Scanner",
  "version": "1.0",
  "description": "Scannez le niveau de toxicité des commentaires à partir d’une publication Instagram.",
  "permissions": [
      "activeTab",
      "scripting"
  ],
  "action": {
      "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ]
}
