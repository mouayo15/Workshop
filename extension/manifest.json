{
  "manifest_version": 3,
  "name": "Comment Filter",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.facebook.com/*", "*://*.instagram.com/*", "*://*.linkedin.com/*"],
    "js": ["content.js"]
  }]
}
