{
  "manifest_version": 3,
  "name": "Comment Retriever",
  "version": "1.0",
  "description": "Retrieves comments from a webpage.",
  "permissions": [
      "activeTab",
      "scripting"
  ],
  "action": {
      "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ]
}
