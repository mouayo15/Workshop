{
  "manifest_version": 3,
  "name": "SafeNavigation",
  "version": "1.0",
  "description": "Extension Chrome pour censurer des mots sp√©cifiques sur les pages web",
  "host_permissions": ["*://*/*", "file://*/*","scripting"],
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
