{
  "manifest_version": 3,
  "name": "SocialGuard",
  "version": "1.0",
  "description": "Censure des mots sp√©cifiques sur les pages web",
  "permissions": ["storage","activeTab", "scripting","tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self';'script-src-elem'; object-src 'self'"
  },

"icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "action": {
     
  }
  }
